<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- patches the recipe of making primitive ammo to use materials from Simple Chains: Lumber Continued by mlie-->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[LTS]Ammunition - Simple Ammo Pack</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd" MayRequire="Mlie.SimpleChainsLumber">
            <xpath>Defs/RecipeDef[defName="Make_AmmoPrimitive"]/ingredients/li[1]/filter/thingDefs</xpath>
               <value>
                  <li>Owl_WoodLog</li>
				  <li>Owl_Lumber</li>
               </value>
        </li>
        <li Class="PatchOperationAdd" MayRequire="Mlie.SimpleChainsLumber">
            <xpath>Defs/RecipeDef[defName="Make_AmmoPrimitive"]/fixedIngredientFilter/thingDefs</xpath>
               <value>
                  <li>Owl_WoodLog</li>
				  <li>Owl_Lumber</li>
               </value>
        </li>
      </operations>
    </match>
  </Operation>
		
